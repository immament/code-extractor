{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": ["es2019"],
    "paths": {
      "@lib2/*": ["src/lib/*"],
      "@tests2/*": ["src/tests/*"]
    },
    "noEmitOnError": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"],
  "references": [{"path": "../ts-common"}]
}
