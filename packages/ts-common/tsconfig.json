{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": ["es2019"],
    "paths": {
      "@tests/*": ["tests/*"],
      "@lib/*": ["lib/*"]
    },
    "composite": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
